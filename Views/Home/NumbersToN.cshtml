@{
    ViewBag.Title = "Nums 1 ... " + ViewBag.Count;
}

<h2>@ViewBag.Title</h2>
<ul>
    @for (int i = 1; i <= ViewBag.Count; i++)
    {
        <li>@i</li>     
    }
</ul>

@*<a asp-action="Limit" asp-route-num="23">Nums 1 ... </a>*@
<br />
<label for="limitInput"></label>
<input type="number" id="limitInput" />
<button class="btn btn-primary" onclick="SetLimit()">Submit</button>

@section Scripts {
    <script src="~/js/numbers.js"></script>
}